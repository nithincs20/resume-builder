{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "rules": {
      "indentation": 2,
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "string-quotes": "double",
      "block-no-empty": true,
      "declaration-colon-space-after": "always",
      "selector-class-pattern": "^[a-z0-9\\-]+$"
    }
  }
  