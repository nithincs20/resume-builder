{
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^16.16.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^37.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint '**/*.css' --fix",
    "lint:all": "npm run lint:html && npm run lint && npm run lint:css"
  }
}
